mixin checkbox-button
    div.checkbox
        h2.checkbox__title Checkbox buttons 
        div.checkbox__list
            div.checkbox__list-item
                input(type="checkbox").checkbox__button
                span.checkbox__arrow
                p.checkbox__list-text Можно курить
            div.checkbox__list-item
                input(type="checkbox").checkbox__button
                span.checkbox__arrow
                p.checkbox__list-text Можно с питомцами
            div.checkbox__list-item
                input(type="checkbox").checkbox__button
                span.checkbox__arrow
                p.checkbox__list-text Можно пригласить гостей <br /> (до 10 человек)


mixin toggle
    div.toggle
        input(type="checkbox" class="toggle__checkbox" id="toggle")
        label(for="toggle" class="toggle__text") Получать спецпредложения


mixin radio(value)
    div.radio
        input(type="radio" class="radio__field" id="radio")
        label(for="radio" class="radio__text") #{value}
